<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>WebBlog | @ViewData["Title"]</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link rel="stylesheet" href="~/css/font-awesome.css" />
        <link rel="stylesheet" href="~/css/ionicons.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"  asp-append-version="true" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/font-awesome.min.css" asp-append-version="true"/>
        <link rel="stylesheet" href="~/css/ionicons.min.css" asp-append-version="true"/>
    </environment>
    <link rel="stylesheet" href="~/css/AdminLTE.css" />
</head>
<body class="skin-black">

    <header class="header">
        <a href="/admin" class="logo">
            <!-- Add the class icon to your logo image or logo icon to add the margining -->
            AdminLTE
        </a>
        <!-- Navigation -->
        @await Component.InvokeAsync("Navigation")
    </header>

    <div class="wrapper row-offcanvas row-offcanvas-left">
        <!-- Left side column. contains the logo and sidebar -->
        <aside class="left-side sidebar-offcanvas">
            @await Component.InvokeAsync("LeftSidebar")
        </aside>

        <aside class="right-side">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                @await Component.InvokeAsync("Breadcrumb")
            </section>

            <section class="content">
                @RenderBody()
            </section>
        </aside>


        <hr />
        <footer>
            <p>&copy; 2018 - WebBlog</p>
        </footer>
    </div>

    <div id="confirmModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body">
                    @Strings.AreYouSure
                </div>
                <div class="modal-footer">
                    <button type="button" data-dismiss="modal" class="btn btn-primary" id="delete">@Strings.Delete</button>
                    <button type="button" data-dismiss="modal" class="btn">@Strings.Cancel</button>
                </div>
            </div>
        </div>
        
    </div>
    <environment include="Development">
        <script src="~/js/AdminLTE/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/AdminLTE/jquery.min.js" asp-append-version="true"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.min.js" asp-append-version="true"></script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>
    <script src="~/js/AdminLTE/app.js" type="text/javascript" asp-append-version="true"></script>

    <script>

        function confirmDelete(e) {
            var $url = $(e).attr('href');
            $('#confirmModal').modal({
                backdrop: 'static',
                keyboard: false
            }).one('click', '#delete', function (e) {
                document.location.href = $url;
            });

            return false;
        }
       
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
